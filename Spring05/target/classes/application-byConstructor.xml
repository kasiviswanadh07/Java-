<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean class="com.kn.entites.Mobile">
<property name="brand" value="Samsung"></property>
<property name="ram" value="16Gb"></property>
<property name="cost" value="87953"></property>

</bean>

<bean id="Person" class="com.kn.entites.Person" autowire="byType">
<property name="name" value="kasi"></property>
<property name="age" value="22"></property>
</bean>
</beans>